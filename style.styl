*
  box-sizing: border-box

html, body
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300
  color: #444
  margin: 0
  overflow: hidden
  user-select: none

.actions
  cursor: pointer
  box-sizing: border-box
  width: 100%
  height: 64px
  position: absolute
  bottom: 0
  left: 0

  .action
    width: 64px
    height: 64px

    background-color: #EEE
    background-position: 50% 25%
    background-repeat: no-repeat
    box-sizing: border-box
    border: 1px solid rgba(0, 0, 0, 0.5)
    border-left: none
    display: inline-block
    font-size: 12px
    position: relative
    vertical-align: top

    &:last-child
      border-top-right-radius: 4px

    .text
      text-align: center
      overflow: hidden
      position: absolute
      width: 100%

      top: 50%
